/**setting.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/**整块渐变部分**/

.top-panel {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: flex-start;
  height: 35%;
  width: 100%;
  background: linear-gradient(#55b3cf, #56e7a6);
}

/**头像圆框部分**/

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  order: 0;
  border-radius: 50%;
  border-width: medium;
  border-color: #56c0c4;
  border-style: solid;
  margin-left: 150px;
}

/**头像块位置**/

.info-block {
  display: flex;
  width: 100%;
  height: 30%;
  margin-top: 18%;
  padding-left: 30%;
}

.user-name {
  padding-right: 126px;
  color: #f7f7ff;
  font-weight: bold;
  font-size: 47rpx;
  font-family: 'Courier New', Courier, monospace;
  position: absolute;
  padding-top: 21px;
}

.cell-left {

  background: linear-gradient(#56d7b3, #56e0ab) !important;
   position: absolute !important;
  width: 28% !important; 
  margin-top: 42px;
  margin-left: 15%;
}

.balance {
    color: #ffffff;
    font-weight: bold;
    font-size: 45rpx;
     font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.balance-icon {
  padding-right: 10px;
  margin-top: 2px;
}

.cell-right {
    background: linear-gradient(#56d7b3, #56e0ab) !important;
  position: absolute !important;
  width: 28% !important;
  margin-left: 55%;
  margin-top: 42px;
}

.second-block{
  padding-bottom:125px;
}

.setting-cell {
  width: 98% !important;
  box-shadow: 3px 3px 14px -3px;
  margin-bottom: 8px;
  border-radius: 8px; 
}
